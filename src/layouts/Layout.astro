---
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';

export interface Props {
	title: string;
	description?: string;
}

const { title, description = 'Torneo Baby FÃºtbol Sala Sur Occidente de Colombia - Tangua 2025. Clasificatorio a la Final Internacional Bello - Antioquia 2026.' } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		
		<!-- Open Graph -->
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:type" content="website" />
		<meta property="og:image" content="https://images.pexels.com/photos/274422/pexels-photo-274422.jpeg?auto=compress&cs=tinysrgb&w=1200&h=630&fit=crop" />
		
		<!-- Twitter Card -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content={title} />
		<meta name="twitter:description" content={description} />
		
		<!-- Fonts -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;700&display=swap" rel="stylesheet">
		<link rel="stylesheet" href="/styles/accessibility.css">
		
		<title>{title}</title>
		
		<style>
			html {
				scroll-behavior: smooth;
			}
			body {
				font-family: system-ui, sans-serif;
				margin: 0;
				padding: 0;
				background-color: #F3F4F6;
			}
			
			/* Brutal animations */
			@keyframes brutal-bounce {
				0%, 100% { transform: translateY(0); }
				50% { transform: translateY(-10px); }
			}
			
			.brutal-animate {
				animation: brutal-bounce 2s ease-in-out infinite;
			}
			
			/* Custom scrollbar */
			::-webkit-scrollbar {
				width: 12px;
			}
			
			::-webkit-scrollbar-track {
				background: #D08900; /* updated brutal-yellow */
				border: 2px solid #000;
			}
			
			::-webkit-scrollbar-thumb {
				background: #000;
				border: 2px solid #D08900;
			}
			
			::-webkit-scrollbar-thumb:hover {
				background: #D6392F; /* updated brutal-red */
			}
		</style>
	</head>
	<body>
		<Navigation />
		<main class="min-h-screen">
			<slot />
		</main>
		<Footer />
	</body>
</html>