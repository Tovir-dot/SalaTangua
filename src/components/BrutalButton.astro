---
export interface Props {
  href?: string;
  variant?: 'primary' | 'secondary' | 'danger' | 'success';
  size?: 'sm' | 'md' | 'lg';
  class?: string;
}

const { href, variant = 'primary', size = 'md', class: className = '' } = Astro.props;

const baseClasses = 'font-brutal uppercase tracking-wide border-4 border-brutal-black transition-all duration-200 hover:translate-x-1 hover:translate-y-1';

const variantClasses = {
  primary: 'bg-brutal-yellow text-brutal-black shadow-brutal hover:shadow-brutal-sm',
  secondary: 'bg-brutal-white text-brutal-black shadow-brutal hover:shadow-brutal-sm', 
  danger: 'bg-brutal-red text-brutal-white shadow-brutal hover:shadow-brutal-sm',
  success: 'bg-brutal-green text-brutal-white shadow-brutal hover:shadow-brutal-sm'
};

const sizeClasses = {
  sm: 'px-4 py-2 text-sm',
  md: 'px-6 py-3 text-base', 
  lg: 'px-8 py-4 text-lg'
};

const Element = href ? 'a' : 'button';
---

<Element 
  href={href}
  class={`${baseClasses} ${variantClasses[variant]} ${sizeClasses[size]} ${className}`}
>
  <slot />
</Element>