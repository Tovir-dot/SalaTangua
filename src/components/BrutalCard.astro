---
export interface Props {
  class?: string;
  variant?: 'default' | 'primary' | 'secondary' | 'danger';
}

const { class: className = '', variant = 'default' } = Astro.props;

const variantClasses = {
  default: 'bg-brutal-white border-brutal-black',
  primary: 'bg-brutal-yellow border-brutal-black',
  secondary: 'bg-brutal-green border-brutal-black',
  danger: 'bg-brutal-red border-brutal-black'
};
---

<div class={`border-4 ${variantClasses[variant]} shadow-brutal p-6 ${className}`}>
  <slot />
</div>